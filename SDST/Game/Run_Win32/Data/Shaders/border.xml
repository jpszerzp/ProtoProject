<shader name="border">
	<program>
		<vertex file="Shaders/glsl/default.vs" />
		<fragment file="Shaders/glsl/border.fs" />
	</program>

	<blend>
		<color op="add" src="blend_one" dest="blend_zero" />
	</blend>

	<depth compare="less" write="true" />
	
	<wind order="ccw" />
	
	<cull face="back" />

	<texture bind="0" name="gTexDiffuse" value="white.png" />
</shader>