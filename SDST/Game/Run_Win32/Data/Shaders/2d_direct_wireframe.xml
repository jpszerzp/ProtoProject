<shader name="2d_direct_wireframe">
	<program>
		<vertex file="Shaders/glsl/2d_direct.vs" />
		<fragment file="Shaders/glsl/2d_direct.fs" />
	</program>

	<blend>
		<color op="add" src="blend_one" dest="blend_zero" />
	</blend>

	<depth compare="less" write="true" />

	<fill mode="wireframe" />
	
	<wind order="ccw" />
	
	<cull face="back" />
</shader>